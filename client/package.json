{
	"name": "electron-angular-webpack",
	"version": "1.0.0",
	"description": "A simple kit for Electron, Angular 6 and Webpack 4 including a live reload system for Angular.",
	"repository": "https://github.com/lbassin/electron-angular-webpack",
	"homepage": "https: //github.com/lbassin/electron-angular-webpack#readme",
	"bugs": {
		"url": "https://github.com/lbassin/electron-angular-webpack/issues"
	},
	"keywords": [
		"electron",
		"angular",
		"webpack",
		"boilerplate",
		"live reload",
		"typescript",
		"sass"
	],
	"author": "BASSIN Laurent & MARQUET Maxime",
	"license": "MIT",
	"main": "electron.js",
	"scripts": {
		"dev": "tsc electron.ts --outDir . && cross-env NODE_ENV=dev webpack-dev-server --port=4200",
		"prod": "webpack && electron dist/electron.js",
		"packager:win": "cross-env NODE_OS=win node builder/packager.js",
		"packager:mac": "cross-env NODE_OS=mac node builder/packager.js",
		"packager:linux": "cross-env NODE_OS=linux node builder/packager.js",
		"installer:win": "npm run packager:win && cross-env NODE_OS=win node builder/installer.js",
		"installer:mac": "npm run packager:mac && cross-env NODE_OS=mac node builder/installer.js",
		"installer:linux": "npm run packager:linux && cross-env NODE_OS=linux node builder/installer.js"
	},
	"devDependencies": {
		"clean-webpack-plugin": "^0.1.19",
		"concurrently": "^3.5.1",
		"copy-webpack-plugin": "^4.5.1",
		"cross-env": "^5.1.4",
		"css-loader": "^0.28.11",
		"electron-packager": "^12.0.2",
		"extract-loader": "^2.0.1",
		"file-loader": "^1.1.11",
		"html-loader": "^0.5.5",
		"html-webpack-plugin": "^3.2.0",
		"img-loader": "^3.0.0",
		"imagemin": "^5.3.1",
		"lodash": "^4.17.10",
		"node-sass": "^4.9.0",
		"postcss-loader": "^2.1.5",
		"raw-loader": "^0.5.1",
		"resolve-url-loader": "^2.3.0",
		"sass-loader": "^7.0.1",
		"ts-loader": "^4.2.0",
		"typescript": "^2.8.3",
		"uglifyjs-webpack-plugin": "^1.2.5",
		"underscore-template-loader": "^1.0.0",
		"url-loader": "^1.0.1",
		"webpack": "^4.7.0",
		"webpack-cli": "^2.1.2",
		"webpack-dev-server": "^3.1.4"
	},
	"optionalDependencies": {
		"appdmg": "^0.5.2",
		"electron-installer-debian": "^0.8.1",
		"electron-installer-dmg": "^1.0.0",
		"electron-squirrel-startup": "^1.0.0",
		"electron-winstaller": "^2.6.4"
	},
	"dependencies": {
		"@angular/common": "^6.0.0",
		"@angular/compiler": "^6.0.0",
		"@angular/core": "^6.0.0",
		"@angular/forms": "^6.0.0",
		"@angular/http": "^6.0.0",
		"@angular/platform-browser": "^6.0.0",
		"@angular/platform-browser-dynamic": "^6.0.0",
		"@angular/router": "^6.0.0",
		"angular-in-memory-web-api": "^0.6.0",
		"core-js": "^2.5.5",
		"electron": "^2.0.0",
		"rxjs": "^6.1.0",
		"zone.js": "^0.8.26"
	}
}
